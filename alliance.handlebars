<html>
    <head>
        <link rel="stylesheet" type="text/css" href="../style.css">
    </head>
    <body>
        <h1 style="font-family: starwars; padding-left: 20px; color: white;">Star Wars Database</h1>
        <div class="topnav">
            <a href="../characters">Characters</a>
            <a class="active" href="../alliance">Alliances</a>
            <a href="../planets">Planets</a>
            <a href="../species">Species</a>
            <a href="../character_movie">Characters & Movies</a>
            <a href="../movies">Movies</a>
        </div>

        <h3>Add a new Alliance:</h3>
        <form id="addalliance" action="/alliance" method="post">
            Name: <input type="text" name="name"><br>
            Credits: <input type="text" name="credits"><br>
            Government: <input type="text" name="government"><br>
            <input type="submit" value="Submit">
        </form>
        <br/>

        <h3>Current Alliance's:</h3>
        <table>
            <thead> 
                <th>Name</th> 
                <th>Credits</th> 
                <th>Government</th>
            </thead> 
            <tbody>
                {{#each alliance}} 
                <tr> 
                    <td>{{name}}</td> 
                    <td>{{credits}}</td> 
                    <td>{{government}}</td> 
                    <td><button onclick="deleteAlliance({{id}})">Delete</button></td>
                    <td><a href="/alliance/{{id}}">Update</a></td>
                </tr> 
                {{/each}} 
            </tbody> 
        </table> 
    </body>
</html>
